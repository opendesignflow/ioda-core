    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.odfi.ioda</groupId>
        <artifactId>ioda-parent</artifactId>
        <version>1.1.0-SNAPSHOT</version>
        <relativePath>../</relativePath>
    </parent>
    <artifactId>ioda-core</artifactId>
    <name>IODA Core lib</name>


    <build>
